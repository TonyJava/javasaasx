    <insert id="batchInsert" keyProperty="id">
        INSERT INTO sys_menu (
        `id`
        ,`p_id`
        ,`p_path`
        ,`depth`
        ,`name`
        ,`type`
        ,`sort`
        ,`href`
        ,`icon`
        ,`permission`
        ,`create_by`
        ,`create_time`
        ,`remarks`
        ,`is_mobile_show`
        ,`status`
        ,`is_sys_data`
        ,`del_flag`
        ) VALUES
        <foreach collection="entities" item="entity" index="index" separator="," >
