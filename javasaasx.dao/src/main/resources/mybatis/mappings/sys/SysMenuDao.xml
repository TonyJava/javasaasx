    <sql id="columns">
    <![CDATA[
        `id`, `p_id`, `p_path`, `depth`, `name`, `type`, `sort`, `href`, `icon`, `permission`, `create_by`, `create_time`, `update_by`, `update_time`, `remarks`, `is_mobile_show`, `status`, `is_sys_data`, `del_flag`
