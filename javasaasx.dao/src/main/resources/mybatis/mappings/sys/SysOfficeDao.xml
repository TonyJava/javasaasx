                </if>
                <if test="paramBean.delFlag != null and paramBean.delFlag != ''">
                    AND `del_flag` = #{paramBean.delFlag}
                </if>
            </if>
            <if test="extendParams.size() > 0">
                <foreach collection="extendParams" item="value" index="key" open="" separator="" close="">
                    AND ${key} ${value}
                </foreach>
            </if>
        </where>
    </sql>

