<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.choudou5.javasaasx.dao.log.SysExceptionDao" >
    <resultMap id="RM_SysException" type="com.choudou5.javasaasx.dao.log.po.SysExceptionPo">
        <result property="id" column="id"/>
        <result property="bizModule" column="biz_module"/>
        <result property="methodName" column="method_name"/>
        <result property="exceptionType" column="exception_type"/>
        <result property="exception" column="exception"/>
        <result property="ip" column="ip"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="columns">
    <![CDATA[
        `id`, `biz_module`, `method_name`, `exception_type`, `exception`, `ip`, `create_by`, `create_time`
    ]]>
    </sql>

    <sql id="where">
        <where>
            
            <!--
            eg: AND title LIKE concat('%',#{paramBean.title},'%')
            -->
            <if test="paramBean != null">
                <if test="paramBean.id != null and paramBean.id != ''">
                     AND `id` = #{paramBean.id}
                </if>
                <if test="paramBean.bizModule != null and paramBean.bizModule != ''">
                     AND `biz_module` = #{paramBean.bizModule}
                </if>
                <if test="paramBean.methodName != null and paramBean.methodName != ''">
                     AND `method_name` LIKE concat('%',#{paramBean.methodName},'%')
                </if>
                <if test="paramBean.exceptionType != null and paramBean.exceptionType != ''">
                     AND `exception_type` = #{paramBean.exceptionType}
                </if>
                <if test="paramBean.exception != null and paramBean.exception != ''">
                     AND `exception` = #{paramBean.exception}
                </if>
                <if test="paramBean.ip != null and paramBean.ip != ''">
                     AND `ip` LIKE concat('%',#{paramBean.ip},'%')
                </if>
                <if test="paramBean.createBy != null and paramBean.createBy != ''">
                     AND `create_by` = #{paramBean.createBy}
                </if>
                <if test="paramBean.createTime != null ">
                     AND `create_time` = #{paramBean.createTime}
                </if>
            </if>
            <if test="extendParams.size() > 0">
                <foreach collection="extendParams" item="value" index="key" open="" separator="" close="">
                    AND ${key} ${value}
                </foreach>
            </if>
        </where>
    </sql>

    <insert id="insert" keyProperty="id">
        INSERT INTO sys_exception (
        <if test="id != null">`id`</if>
        <if test="bizModule != null">,`biz_module`</if>
        <if test="methodName != null">,`method_name`</if>
        <if test="exceptionType != null">,`exception_type`</if>
        <if test="exception != null">,`exception`</if>
        <if test="ip != null">,`ip`</if>
        <if test="createBy != null">,`create_by`</if>
        <if test="createTime != null">,`create_time`</if>
        ) VALUES (
        <if test="id != null">#{id}</if>
        <if test="bizModule != null">,#{bizModule}</if>
        <if test="methodName != null">,#{methodName}</if>
        <if test="exceptionType != null">,#{exceptionType}</if>
        <if test="exception != null">,#{exception}</if>
        <if test="ip != null">,#{ip}</if>
        <if test="createBy != null">,#{createBy}</if>
        <if test="createTime != null">,#{createTime}</if>
        )
     </insert>

    <insert id="batchInsert" keyProperty="id">
        INSERT INTO sys_exception (
        `id`
        ,`biz_module`
        ,`method_name`
        ,`exception_type`
        ,`exception`
        ,`ip`
        ,`create_by`
        ,`create_time`
        ) VALUES
        <foreach collection="list" item="entity" index="index" separator="," >
        (
        #{entity.id}
        ,#{entity.bizModule}
        ,#{entity.methodName}
        ,#{entity.exceptionType}
        ,#{entity.exception}
        ,#{entity.ip}
        ,#{entity.createBy}
        ,#{entity.createTime}
        )
        </foreach>
    </insert>

    <update id="update" >
    <![CDATA[
        UPDATE sys_exception SET
            `biz_module` = #{bizModule} ,
            `method_name` = #{methodName} ,
            `exception_type` = #{exceptionType} ,
            `exception` = #{exception} ,
            `ip` = #{ip} ,


        WHERE
            id = #{id} 
    ]]>
    </update>

    <delete id="deleteById">
    <![CDATA[
        DELETE FROM sys_exception
        WHERE id = #{id} 
    ]]>
    </delete>

    <delete id="deleteByIds" >
        DELETE FROM sys_exception
        WHERE id IN
        <foreach collection="ids" item="id" open="(" close=")" separator="," >#{id} </foreach>
    </delete>

    <delete id="deleteBy">
        DELETE FROM sys_exception
        <include refid="where"/>
    </delete>


    <select id="findById" resultMap="RM_SysException">
        SELECT <include refid="columns"/>
        <![CDATA[
            FROM sys_exception
            WHERE id = #{id} 
        ]]>
    </select>

    <select id="count" resultType="long">
        SELECT count(1) FROM sys_exception
        <include refid="where"/>
    </select>

    <select id="findList" resultMap="RM_SysException">
        SELECT <include refid="columns"/>
        FROM sys_exception
        <include refid="where"/>
        <if test="orderBean != null and orderBean.orderBy != null">
            ORDER BY ${orderBean.orderBy} ${orderBean.order}
        </if>
        <if test="pageBean != null">
            <if test="dbName == 'mysql'">limit ${pageBean.start}, ${pageBean.pageSize} </if>
        </if>
    </select>

    <select id="findAll" resultMap="RM_SysException">
        SELECT <include refid="columns"/>
        FROM sys_exception
        <if test="orderBean != null and orderBean.orderBy != null">
            ORDER BY ${orderBean.orderBy} ${orderBean.order}
        </if>
    </select>

    <select id="findUniqueBy" resultMap="RM_SysException">
        SELECT <include refid="columns"/>
        FROM sys_exception
        <include refid="where"/>
        <if test="orderBean != null and orderBean.orderBy != null">
            ORDER BY ${orderBean.orderBy} ${orderBean.order}
        </if>
        <if test="dbName == 'mysql'">limit 1</if>
    </select>


</mapper>


